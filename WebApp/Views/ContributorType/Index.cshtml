@model WebApp.ViewModels.ContributorTypeViewModel

@{
    ViewData["Title"] = "List Type";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="panel-body">
    @using (Html.BeginForm("Index", "ContributorType", FormMethod.Get, new { @id = "frmSearch" }))
    {
        @Html.AntiForgeryToken()
        <div class="row">
            <div class="col-md-12">
                <div class="col-md-6">
                    <div class="form-group">
                        <div class="form-group">
                            @Html.DropDownListFor(model => model.Filter.LanguageID, new SelectList(ViewBag.Languages, "Value", "Text"), new { @class = "form-control" })
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="control-label">&nbsp;</label>
                        <a href="javascript:;" class="btn btn-info" id="btnSubmit">Apply</a>
                        @Html.ActionLink("Reset", "Index", "ContributorType", null, new { @class = "btn btn-info" })
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<table id="table" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
    <thead>
        <tr>
            @*<th>
                    @Html.DisplayNameFor(model => model.ContributorTypeId)
                </th>*@
            <th>
                Title
            </th>
            <th>
                Name
            </th>
            <th>
                Description
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Data.ContributorTypes)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ContributorTypeID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.ContributorTypeID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ContributorTypeID }, new { onclick = "return confirm('Are you sure you wish to delete this type?');" })
                </td>
            </tr>
        }
    </tbody>
</table>
@section scripts {

    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />

    <link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />

    <script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>


    <script type="text/javascript">
        $(document).ready(function () {
            $('#table').dataTable();
        });

        $(function () {

            $("#btnSubmit").on("click", function () {
                //$("#Page").val(1);
                $("#frmSearch").submit();
                return false;
            });
        });
    </script>
}
